<%= render 'layouts/errors', object: @post %>


<div class="container">
  <h1> Craft a Post! </h1>
  <%= form_for Post.create do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, :required => true %>
  <%= form.label :entry %>
  <%= form.text_area :entry, :required => true %>
  <%= form.label :date %>
  <%= form.date_field :date, :required => true %>
  <%= form.submit "Create Post" %>
  <% end %>
</div>
