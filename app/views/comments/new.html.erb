<%= render 'layouts/errors', object: @comment %>


<div class="container">
  <h1> Craft a Comment! </h1>
  <%= form_for [@post, @comment] do |form| %>
  <div>
  <%= form.label :username %>
  <%= form.text_field :username, :required => true %>
  </div>
  <div>
  <%= form.label :comment  %>
  <%= form.text_area :description, :required => true %>
  </div>
  <%= form.submit "Add Comment" %>
  <% end %>
</div>
