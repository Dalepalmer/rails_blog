<div class="container">
  <h1> Craft a Comment! </h1>
  <%= form_for [@post, @comment], remote: true do |f| %>
  <div>
  <%= f.hidden_field :username, value: current_user.email %>
  </div>
  <div>
  <%= f.label :description  %>
  <%= f.text_area :description, :required => true %>
  </div>
  <%= f.submit "Post Comment" %>
  <% end %>
</div>
